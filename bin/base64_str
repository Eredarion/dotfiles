#!/bin/bash

case "$1" in

#-- help -----------------------------------------
    *h|*help)
        printf "\n%s\n%s\n%s\n%s\n%s\n" \
            "  +--> Options <-------------+" \
            "  |  -e  -->  encode string  |" \
            "  |  -d  -->  decode string  |" \
            "  +--------------------------+"
    ;;
#-------------------------------------------------

#-- encode ---------------------------------------
    *e)
        echo $2 | base64
    ;;
#-------------------------------------------------

#-- decode ---------------------------------------
    *d)
        echo $2 | base64 --decode
    ;;
#-------------------------------------------------

esac
