#!/bin/bash

take_ss() {
	
	cd ~/Screenshots && scrot '%Y-%m-%d_%H:%M:%S.png' -q 100  "$1"

}

notify_send() {
	notify-send --expire-time=2000 -i view-fullscreen 'Screenshot!~' 'Saved to ~/Screenshots/Capt-\nured !' --icon='/home/ranguel/icon/camera_2.png' && sleep 0.5
}

main() {
	case "$1" in
		crop)
			take_ss -s
			notify_send
			;;
		*)
			notify_send
			take_ss
	esac
}

main "$@"
